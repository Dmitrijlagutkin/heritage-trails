---
interface Props {
    href: string;
    variant?: 'primary' | 'secondary';
}

const { href, variant = 'primary' } = Astro.props;
---

<a
    href={href}
    class:list={[
        'inline-flex items-center justify-center px-6 py-3 rounded-md font-semibold no-underline transition-all duration-300',
        variant === 'primary' && 'bg-secondary-200  hover:bg-secondary-300 text-primary-400',
        variant === 'secondary' && 'bg-transparent text-natural-200 border-2 border-natural-100 hover:bg-white/10'
    ]}
>
    <slot />
</a>
