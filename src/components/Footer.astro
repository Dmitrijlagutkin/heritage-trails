---
import { t } from 'i18n:astro';
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <section class="footer-section" aria-labelledby="footer-about">
                <h2 id="footer-about">{t('home.footer.about.title')}</h2>
                <p>{t('home.footer.about.description')}</p>
                <nav aria-label="About links">
                    <ul>
                        <li><a href="/about">{t('home.footer.about.links.about')}</a></li>
                        <li><a href="/contact">{t('home.footer.about.links.contact')}</a></li>
                        <li><a href="/privacy">{t('home.footer.about.links.privacy')}</a></li>
                    </ul>
                </nav>
            </section>

            <section class="footer-section" aria-labelledby="footer-explore">
                <h2 id="footer-explore">{t('home.footer.explore.title')}</h2>
                <nav aria-label="Explore links">
                    <ul>
                        <li><a href="/parks">{t('home.footer.explore.links.parks')}</a></li>
                        <li><a href="/trails">{t('home.footer.explore.links.trails')}</a></li>
                        <li><a href="/activities">{t('home.footer.explore.links.activities')}</a></li>
                    </ul>
                </nav>
            </section>

            <section class="footer-section" aria-labelledby="footer-legal">
                <h2 id="footer-legal">{t('home.footer.legal.title')}</h2>
                <nav aria-label="Legal links">
                    <ul>
                        <li><a href="/terms">{t('home.footer.legal.links.terms')}</a></li>
                        <li><a href="/privacy">{t('home.footer.legal.links.privacy')}</a></li>
                        <li><a href="/cookies">{t('home.footer.legal.links.cookies')}</a></li>
                    </ul>
                </nav>
            </section>

            <section class="footer-section" aria-labelledby="footer-social">
                <h2 id="footer-social">{t('home.footer.social.title')}</h2>
                <nav aria-label="Social media links">
                    <ul class="social-links">
                        <li>
                            <a href="https://facebook.com" aria-label="Facebook">
                                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="https://twitter.com" aria-label="Twitter">
                                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="https://instagram.com" aria-label="Instagram">
                                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                                </svg>
                            </a>
                        </li>
                    </ul>
                </nav>
            </section>
        </div>

        <div class="footer-bottom">
            <p>&copy; {new Date().getFullYear()} {t('home.footer.copyright')}</p>
            <nav aria-label="Footer bottom links">
                <ul>
                    <li><a href="/sitemap.xml">{t('home.footer.sitemap')}</a></li>
                    <li><a href="/accessibility">{t('home.footer.accessibility')}</a></li>
                </ul>
            </nav>
        </div>
    </div>
</footer>

<style>
    .footer {
        background-color: #f8f9fa;
        padding: 4rem 0 2rem;
        margin-top: 4rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-section h2 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section li {
        margin-bottom: 0.5rem;
    }

    .footer-section a {
        color: #666;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-section a:hover {
        color: #000;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links .icon {
        width: 24px;
        height: 24px;
        fill: currentColor;
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 2rem;
        border-top: 1px solid #e9ecef;
    }

    .footer-bottom ul {
        display: flex;
        gap: 1rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    @media (max-width: 768px) {
        .footer-bottom {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
    }
</style> 