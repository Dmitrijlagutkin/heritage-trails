---
import LanguageSwitcher from './LanguageSwitcher';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { t } from '../i18n/i18n';
import heritageLogo from '../assets/heritage.svg';
const { currentLocale } = Astro;

const locale = currentLocale || 'en';
---

<header class="fixed top-0 left-0 right-0 z-[100] bg-black/50 backdrop-blur-md text-natural-white">
    <div class="max-w-[1200px] mx-auto px-8 py-4 flex justify-between items-center">
        <div>
            <a 
                href={getRelativeLocaleUrl(locale, '')} 
                class="flex items-center gap-2 text-natural-100 text-2xl font-semibold no-underline transition-opacity duration-300 hover:opacity-80"
            >
                <img src={heritageLogo.src} width={heritageLogo.width} height={heritageLogo.height} alt="Heritage Trails logo" class="h-8 w-auto filter invert brightness-0" loading="lazy" />
                Heritage Trails
            </a>
        </div>
        <nav class="flex items-center gap-8">
            <ul class="flex gap-8 list-none m-0 p-0">
                <li>
                    <a 
                        href={getRelativeLocaleUrl(locale, 'contact')} 
                        class="text-natural-100 no-underline text-lg transition-opacity duration-300 hover:opacity-80 hover:underline"
                    >
                        {t('header.explore_map', locale)}
                    </a>
                </li>
            </ul>
            <div class="flex gap-4">
                <LanguageSwitcher client:load currentLocale={currentLocale} />
            </div>
        </nav>
    </div>
</header>

