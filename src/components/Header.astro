---
import { t } from 'i18n:astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
---

<header class="header">
    <div class="header-container">
        <div class="logo">
            <a href="/" class="logo-text">Heritage Trails</a>
        </div>
        <nav class="navigation">
            <ul>
                <li><a href="/contact">{t('header.explore_map')}</a></li>
                <li><a href="/about">{t('header.about')}</a></li>
            </ul>
            <div class="language-switcher">
                <LanguageSwitcher />
            </div>
        </nav>
    </div>
</header>

<style>
    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 100;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
    }

    .header-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo-text {
        color: var(--color-natural-white);
        font-size: 1.5rem;
        font-weight: 600;
        text-decoration: none;
        transition: opacity 0.3s ease;
    }

    .logo-text:hover {
        opacity: 0.8;
    }

    .navigation {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .navigation ul {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .navigation a {
        color: var(--color-natural-white);
        text-decoration: none;
        font-size: 1.1rem;
        transition: opacity 0.3s ease;
    }

    .navigation a:hover {
        opacity: 0.8;
    }

    .language-switcher {
        display: flex;
        gap: 1rem;
    }

    .language-link {
        text-decoration: none;
        color: var(--color-natural-white);
        font-weight: 500;
        transition: opacity 0.3s ease;
    }

    .language-link:hover {
        opacity: 0.8;
    }

    .language-link.active {
        font-weight: 600;
    }
</style> 