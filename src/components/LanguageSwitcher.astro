---
const languages = [
  { code: 'en', name: 'English' },
  { code: 'ua', name: 'Українська' },
  { code: 'ru', name: 'Русский' }
];
---

<div class="language-switcher">
  {languages.map((lang) => (
    <a
      href={`?lang=${lang.code}`}
      class="language-link"
      data-lang={lang.code}
    >
      {lang.name}
    </a>
  ))}
</div>

<style>
  .language-switcher {
    display: flex;
    gap: 1rem;
  }

  .language-link {
    text-decoration: none;
    color: var(--color-natural-white);
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  .language-link:hover {
    opacity: 0.8;
  }

  .language-link.active {
    font-weight: 600;
  }
</style> 