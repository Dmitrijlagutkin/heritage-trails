---
import Button from './Button.astro';
---

<section class="main-section">
    <div class="main-section__content">
        <h1 class="main-section__title">Discover the Beauty of National Parks</h1>
        <p class="main-section__description">
            Explore breathtaking landscapes, diverse wildlife, and unforgettable adventures in our national parks.
        </p>
        <div class="main-section__buttons">
            <Button href="/map" variant="primary">Explore Map</Button>
            <Button href="/about" variant="secondary">Learn More</Button>
        </div>
    </div>
</section>

<style>
    .main-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
                    url('/assets/homeMainSectionBG.jpg') center/cover;
        padding: 2rem;
        text-align: center;
    }

    .main-section__content {
        max-width: 800px;
        color: var(--color-natural-white);
    }

    .main-section__title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .main-section__description {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .main-section__buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }
</style>


