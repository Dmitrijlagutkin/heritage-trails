---
import { t } from '../../../i18n/i18n';
const { currentLocale } = Astro;

const locale = currentLocale || 'en';

interface Props {
    index: number;
    title: string;
    description: string;
}

const { title, description, index } = Astro.props;
---
     
<div class="flex flex-col gap-4 items-center">
    <h3 class="bg-secondary-200 text-primary-400 font-bold text-2xl rounded-md h-[70px] w-[70px] flex items-center justify-center">{index}</h3>
    <p class="text-primary-400 font-bold text-xl text-center">{title}</p>
    <p class="text-natural-300 text-center">{description}</p>
</div>
       
    

