---
import { t } from '../../../i18n/i18n';
const { currentLocale } = Astro;

const locale = currentLocale || 'en';

interface Props {
    index: number;
    title: string;
    description: string;
}

const { title, description, index } = Astro.props;
---
     
<div class="flex flex-col gap-4 items-center">
    <span class="bg-secondary-200 text-primary-400 font-bold text-2xl rounded-md h-[70px] w-[70px] flex items-center justify-center">{index}</span>
    <h3 class="text-natural-white text-2xl text-center">{title}</h3>
    <p class="text-natural-200 text-center">{description}</p>
</div>
       
    

