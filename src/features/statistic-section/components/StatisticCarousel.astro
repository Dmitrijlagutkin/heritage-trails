---
import StatisticItemCard from './StatisticItemCard.astro';
import type { StatisticItem } from '../types';
import { statisticList } from '../data/statisticList';
---

<div class="relative h-[360px] px-3 overflow-hidden">
    <div class="flex flex-col gap-4 animate-scroll">
        {statisticList.map((item: StatisticItem) => (
            <div>
                <StatisticItemCard 
                    title={item.title} 
                    number={item.number}
                />
            </div>
        ))}
        {statisticList.map((item: StatisticItem) => (
            <div>
                <StatisticItemCard 
                    title={item.title} 
                    number={item.number}
                />
            </div>
        ))}
    </div>
</div>

<style>
    @keyframes scroll {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-50%);
        }
    }
    .animate-scroll {
        animation: scroll 20s linear infinite;
    }
</style> 