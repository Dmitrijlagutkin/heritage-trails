---
import { t } from '../../../i18n/i18n';
import Button from '../../../components/Button.astro';
const { currentLocale } = Astro;

const locale = currentLocale || 'en';
---

<div class="flex flex-col gap-8">
    <h2 class="text-5xl font-bold leading-tight text-secondary-400">
        {t('home.statistic_section.title', locale)}
    </h2>
    <p class="text-secondary-400 ">
        {t('home.statistic_section.description', locale)}
    </p>
    <Button href="/map" variant="tertiary" class="w-fit">
        {t('home.statistic_section.button', locale)}
    </Button>
</div>
      

