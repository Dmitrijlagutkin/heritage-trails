---
import StatisticCarousel from './StatisticCarousel.astro';
import { t } from '../../../i18n/i18n';
const { currentLocale } = Astro;

const locale = currentLocale || 'en';
---

<div class="grid grid-cols-2 gap-4">
    <div class="space-y-4">
        <StatisticCarousel />
    </div>
    <div>
        <div class="bg-natural-white rounded-lg p-4 h-full">
            <h3 class="text-2xl font-bold mb-2 text-center">
                {t('home.statistic_section.total_places', locale)}
            </h3>
        </div>
    </div>
</div>
   

