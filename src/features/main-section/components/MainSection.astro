---
import Button from '../../../components/Button.astro';
import Trans from '../../../components/Trans.astro';
import { t } from '../../../i18n/i18n';

const { currentLocale } = Astro;
const locale = currentLocale || 'en';
---

<section class="min-h-screen flex items-center justify-center relative p-8 text-center">
    <img 
        src="/assets/homeMainSectionBG.jpg" 
        alt="Background" 
        class="absolute inset-0 w-full h-full object-cover z-0"
        loading="eager"
    />
    <div class="absolute inset-0 bg-black bg-opacity-50 z-10"></div>
    <div class="max-w-[800px] relative z-20">
        <h1 class="text-7xl font-bold mb-6 leading-tight text-natural-white">
            {t('home.main_screen.title', locale)}
        </h1>
        <p class="text-5xl mb-8 opacity-90 text-natural-white">
            {t('home.main_screen.subtitle', locale)}
        </p>
        <p>
            <Trans 
                key="home.main_screen.description_1" 
                locale={locale} 
                class="text-secondary-200 font-bold" 
                name="PARK_TYPE"
                dynamicText="National Parks"
                mainClass="text-xl mb-8 opacity-90 text-natural-white"
            />
        </p>
        <p>
            <Trans 
                key="home.main_screen.description_2" 
                locale={locale} 
                class="font-bold" 
                mainClass="text-xl mb-8 opacity-90 text-natural-white"
            />
        </p>
        <div class="flex gap-4 justify-center">
            <Button href="/map" variant="primary">Explore Map</Button>
            <Button href="/about-us" variant="secondary">Learn More</Button>
        </div>
    </div>
</section>
